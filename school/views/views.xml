<odoo>
	<data>
		<!-- action student -->
		<record id="student_action" model="ir.actions.act_window">
			<field name="name">Student</field>
			<field name="res_model">school.student</field>
			<field name="view_mode">kanban,tree,graph,pivot,form</field>
		</record>

		<!-- action lessons -->
		<record id="lesson_action" model="ir.actions.act_window">
			<field name="name">Lesson</field>
			<field name="res_model">school.lesson</field>
			<field name="view_mode">tree,calendar,form</field>
		</record>

		<!-- action subject -->
		<record id="subject_action" model="ir.actions.act_window">
			<field name="name">Subject</field>
			<field name="res_model">school.subject</field>
			<field name="view_mode">tree,form</field>
		</record>


		<!-- action teacher -->
		<record id="teacher_action" model="ir.actions.act_window">
			<field name="name">Teacher</field>
			<field name="res_model">school.teacher</field>
			<field name="view_mode">tree,form</field>
		</record>

		<record id="hr_employee_action" model="ir.actions.act_window">
			<field name="name">Teachers (HR)</field>
			<field name="res_model">hr.employee</field>
			<field name="view_mode">kanban,tree,form</field>
		</record>








		<!-- action room -->
		<record id="room_action" model="ir.actions.act_window">
			<field name="name">Room</field>
			<field name="res_model">school.room</field>
			<field name="view_mode">tree,form</field>
		</record>


		<!-- views -->
		<!-- search view -->

		<record id="student_search" model="ir.ui.view">
			<field name="name">Student</field>
			<field name="model">school.student</field>
			<field name="arch" type="xml">
				<search>
					<field name="name"/>
					<field name="number"/>
					<field name="gender"/>
					<field name="fees"/>
					<field name="is_register"/>
				</search>
			</field>
		</record>

		<!-- tree view -->
		<record id="student_tree" model="ir.ui.view">
			<field name="name">Student</field>
			<field name="model">school.student</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="number"/>
					<field name="gender"/>
					<field name="fees"/>
					<field name="is_register"/>					
				</tree>
			</field>
		</record>

		<!-- end of views -->


		<!-- graph view -->
		<record id="student_graph" model="ir.ui.view">
			<field name="name">Student</field>
			<field name="model">school.student</field>
			<field name="arch" type="xml">
				<graph>
					<field name="name"/>
					<field name="degree" type="measure"/>
				</graph>
			</field>
		</record>


		<!-- pivot view -->
		<record id="student_pivot" model="ir.ui.view">
			<field name="name">Student</field>
			<field name="model">school.student</field>
			<field name="arch" type="xml">
				<pivot>
					<field name="name"/>
					<field name="degree" type="measure"/>
				</pivot>
			</field>
		</record>		


		<!-- calendar view -->
		<record id="lesson_calendar" model="ir.ui.view">
			<field name="name">Lesson</field>
			<field name="model">school.lesson</field>
			<field name="arch" type="xml">
				<calendar date_start="time" color="name">
					<field name="name"/>
					<field name="number"/>
				</calendar>
			</field>
		</record>				


		<!-- form view -->
		<record id="student_form" model="ir.ui.view">
			<field name="name">Student</field>
			<field name="model">school.student</field>
			<field name="arch" type="xml">
				<form>
					<header>
						<button type="object" name="studying" string="Studying" states="draft"/>
						<button type="object" name="graudate" string="Graudate" states="studying" groups="school.man_group"/>
						<field name="state" widget="statusbar"/>
					</header>
					<sheet>

						<field name="image" widget="image" class="oe_avatar"/>

						<div class="oe_title">
                            <h1 class="d-flex">
                                <field name="name" placeholder="Student's Name" required="True"/>
                            </h1>

                        </div>

						<group>
							<group>
								<field name="register_date" groups="school.reg_group,school.man_group"/>
								<field name="number"/>
								<field name="year" states="graudate"/>
								<field name="birthdate"/>
								<field name="age"/>
								<field name="age2"/>
							</group>
							<group>
								<field name="is_register"/>
								<field name="degree"/>
								<field name="fees"/>
								<field name="gender" widget="radio"/>
								<field name="room_id"/>
							</group>
						</group>
						<notebook>
							<page string="Description">
								<field name="description"/>
							</page>
							<page string="Resume">
								<field name="cv"/>

							</page>
							<page string="subjects">
								<field name="subjects"/>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>	

		<record id="student_kanban" model="ir.ui.view">
			<field name="name">school.student.kanban</field>
			<field name="model">school.student</field>
			<field name="arch" type="xml">
				<kanban class="o_hr_employee_kanban" js_class="hr_employee_kanban" sample="1">
				   <field name="id"/>
				   <templates>
				       <t t-name="kanban-box">
				           <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record">
				               <field name="image" widget="image" class="o_kanban_image_fill_left"/>

				                <div class="oe_kanban_details">
				                   <div class="o_kanban_record_top">
				                       <div class="o_kanban_record_headings">
				                           <strong class="o_kanban_record_title">
				                                <field name="name" placeholder="Student's Name"/>
				                           </strong>
				                       </div>
				                   </div>

				                   Age: <field name="age"/> <br/>
				                   Gender: <field name="gender"/> <br/>
				                   Is Register: <field name="age"/> <br/>
				                   <t t-if="is_register">
				                        <span style="color: green;">Is registered</span>
				                   </t>
				                   <t t-else="">
				                        <span style="color: red;">Is not registered</span>
				                   </t>
				               </div>
				           </div>
				       </t>
				   </templates>
				</kanban>   
			</field>
		</record>

		<record id="hr_employee_form_teacher" model="ir.ui.view">
			<field name="name">hr.employee.form.inherit.teacher</field>
			<field name="model">hr.employee</field>
			<field name="inherit_id" ref="hr.view_employee_form"/>
			<field name="arch" type="xml">
				<field name="coach_id" position="replace">
					<field name="supervisor_room"/>
					<field name="subjects"/>
				</field>

				<field name="parent_id" position="attributes">
					<attribute name="required">1</attribute>
				</field>

				<!-- <xpath expr="//form/sheet/notebook" position="inside">
					<page string="School">
						<group>
							<field name="supervisor_room"/>
							<field name="subjects"/>
						</group>
					</page>
				</xpath> -->

				<!-- <xpath expr="//form/sheet/notebook/page[1]" position="before">
					<page string="School">
						<group>
							<field name="supervisor_room"/>
							<field name="subjects"/>
						</group>
					</page>
				</xpath> -->


				<xpath expr="//form/sheet/notebook/page[@name='personal_information']" position="before">
					<page string="School">
						<group>
							<field name="supervisor_room"/>
							<field name="subjects"/>
						</group>
					</page>
				</xpath>

			</field>
		</record>			

		<!-- end of views -->


		<!-- menu -->
		<menuitem name="School" id="school_root_menu"/>
		<menuitem name="Student" id="student_menu" parent="school_root_menu" action="student_action" groups="school.reg_group,school.man_group"/>
		<menuitem name="Lesson" id="lesson_menu" parent="school_root_menu" action="lesson_action"/>

		<menuitem name="Subject" id="subject_menu" parent="school_root_menu" action="subject_action"/>

		<menuitem name="Teacher" id="teacher_menu" parent="school_root_menu" 
		action="teacher_action"/>

		<menuitem name="Teacher (HR)" id="teacher_hr_menu" parent="school_root_menu" action="hr_employee_action"/>
		<menuitem name="Room" id="room_menu" parent="school_root_menu" action="room_action"/>

	</data>
</odoo>